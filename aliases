youtube () {
  query=""
  for i in "$*"
  do
     query+=$i
  done
  open "https://www.youtube.com/results?search_query=${query}"
}

cleaning () {
  # allez dans le dossier capsens
  cd ~/code/capsens
  # aller chercher tous les sous dossier
  # for i in "$*"
  # do
  # done
  # et faire les commandes suivantes
  bundle install
  rails log:clear
  rails tmp:clear
  # afficher le nom du dossier qui vient d'être nettoyé
  # exemple: 'stomea cleaned'
}

cleaning() {
  local base=~/code/capsens

  cd "$base" || { echo "Impossible d'accéder à $base" >&2; return 1; }

  for dir in */; do
    if [ -d "$dir" ]; then
      echo "→ Nettoyage de ${dir%/}…"
      cd "$dir" || { echo "  Échec cd dans $dir" >&2; continue; }
      # bundle install --quiet
      rails log:clear
      rails tmp:clear
      cd ..
      echo "${dir%/} cleaned"
      echo
    fi
  done
}


